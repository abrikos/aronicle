//- Navbar mixins
mixin nav(name, id, style)
	nav( role="navigation", class=["navbar", "navbar-inverse"] )
		div.container-fluid
			div
				button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#" + id, aria-expanded="false", aria-controls= id, )
					span.sr-only
				a.navbar-brand(href="/") #{name}

				.collapse.navbar-collapse( id=id )
					ul.nav.navbar-nav
						block

mixin nav_item(href, active)
	li(class=active): a( href=href )
		block

mixin nav_item_dropdown(href, active)
	li(class=["dropdown", active])
		a.dropdown-toggle( href=href, data-toggle="dropdown", role="button", aria-expanded="false" )= attributes.label
		span.caret
		ul.dropdown-menu( role="menu" )
			block

mixin nav_divider
	li.divider

mixin nav_header
	li.dropdown-header
		block

//- End navbar mixins